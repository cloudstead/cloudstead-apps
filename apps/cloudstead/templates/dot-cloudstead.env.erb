<%
base_bag = @app[:databag][:base]
init_bag = @app[:databag][:init]
ports_bag = @app[:databag][:ports]
home = @app[:run_as_home]
%>
export DEPLOY_ENV=local

export PUBLIC_BASE_URI=https://<%=base_bag['hostname']%>.<%=base_bag['parent_domain']%>
export SPRING_XML_PATH=spring.xml
export CLOUDSTEAD_SERVER_PORT=<%=ports_bag['primary']%>

export ASSETS_DIR=<%=@app[:run_as_home]%>/<%=@app[:name]%>/site
export EMAIL_TEMPLATE_ROOT=<%=@app[:run_as_home]%>/<%=@app[:name]%>/email

export CLOUDOS_PARENT_DOMAIN=<%=base_bag['parent_domain']%>
export WELCOME_SENDER_NAME=<%=init_bag['mail_senders']['welcome']['name']%>
export WELCOME_SENDER_EMAIL=<%=init_bag['mail_senders']['welcome']['email']%>
export RESET_PASSWORD_SENDER_NAME=<%=init_bag['mail_senders']['reset_password']['name']%>
export RESET_PASSWORD_SENDER_EMAIL=<%=init_bag['mail_senders']['reset_password']['email']%>

export DB_USER=<%=@app[:dbuser]%>
export DB_PASS=<%=@app[:dbpass]%>

export AWS_ACCESS_KEY_ID=<%=init_bag['aws_access_key']%>
export AWS_SECRET_ACCESS_KEY=<%=init_bag['aws_secret_key']%>
export CLOUD_STORAGE_DATA_KEY=<%=init_bag['data_key']%>
export CLOUD_STORAGE_USER=<%=init_bag['cloud_storage_user']%>
export CLOUDOS_SERVER_TARBALL=<%=init_bag['cloudos_server_tarball']%>

export CLOUDOS_S3_BUCKET=<%=init_bag['s3_bucket']%>
export AWS_IAM_GROUP=<%=init_bag['aws_iam_group']%>

export DO_CLIENT_ID=<%=init_bag['do_client_id']%>
export DO_API_KEY=<%=init_bag['do_api_key']%>

# These wildcard certs are (for now) what gets installed on all cloudos instances
export SSL_PEM=<%=home%>/ssl/<%=init_bag['wildcard_cert_name']%>.pem
export SSL_KEY=<%=home%>/ssl/<%=init_bag['wildcard_cert_name']%>.key

export CLOUDOS_CHEF_DIR=<%=home%>/<%=@app[:run_as]%>/cloudos-chef

export SENDGRID_API_USER=<%=init_bag['sendgrid']['user']%>
export SENDGRID_API_KEY=<%=init_bag['sendgrid']['password']%>

export AUTHY_KEY=<%=init_bag['authy']['user']%>
export AUTHY_URI=<%=init_bag['authy']['base_uri']%>

export ADMIN_AUTHY_KEY=<%=init_bag['authy_admin']['user']%>
export ADMIN_AUTHY_URI=<%=init_bag['authy_admin']['base_uri']%>

export CLOUDOS_DNS_USER=<%=init_bag['cloudos_dns']['user']%>
export CLOUDOS_DNS_PASSWORD=<%=init_bag['cloudos_dns']['password']%>
export CLOUDOS_DNS_BASE_URI=https://<%=@app[:hostname]%>/dns/api

export APPSTORE_ADMIN_USER=<%=init_bag['cloudos_appstore']['user']%>
export APPSTORE_ADMIN_PASSWORD=<%=init_bag['cloudos_appstore']['password']%>
export APPSTORE_BASE_URI=<%=init_bag['cloudos_appstore']['base_uri']%>
